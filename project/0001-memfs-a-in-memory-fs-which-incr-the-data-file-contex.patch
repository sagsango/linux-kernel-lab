+			      entry->is_dir ? DT_DIR : DT_REG)) {
+			printk(KERN_INFO "mymemfs: Failed to emit '%s'\n", entry->name);
+			break;
+		}
+		ctx->pos++;
+		pos++;
+	}
+
+	return 0;
+}

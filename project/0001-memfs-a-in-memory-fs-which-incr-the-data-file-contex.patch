+	if (S_ISDIR(mode)) {
+		inode->i_op = &mem_fs_inode_ops;
+		inode->i_fop = &mem_fs_dir_ops;
+	} else if (S_ISREG(mode)) {
+		inode->i_op = &mem_fs_inode_ops;
+		inode->i_fop = &mem_fs_file_ops;

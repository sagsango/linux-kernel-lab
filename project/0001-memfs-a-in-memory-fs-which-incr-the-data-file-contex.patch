+
+	// XXX: ADD in commit, because we have to adjust the position!
+	pos = ctx->pos - 2;
+	*/
+
+	/* It is reading one entry at a time  which is at pos*/
+	list_for_each_entry(entry, &dir->children, list) {
+		if (pos > 0) {
+			pos--;
+			continue;
+		}
+		if (!dir_emit(ctx, entry->name, strlen(entry->name),
